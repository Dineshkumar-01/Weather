<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sunny"
    >

<LinearLayout
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear1"
        android:layout_marginTop="30dp"
        android:layout_marginStart="17dp"
        >
        <SearchView
            android:layout_width="278dp"
            android:layout_height="52dp"
            android:id="@+id/home_search"
            android:queryHint="@string/search"
            android:textAlignment="center"
            android:background="@drawable/searchbg"
            >

        </SearchView>
        <ImageView
            android:id="@+id/locationicon"
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/pin"
            />
    </LinearLayout>

    <TextView
        android:layout_width="168dp"
        android:layout_height="38dp"
        android:id="@+id/locationname"
        android:layout_gravity="center"
        android:text="Tiruchirappalli"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:fontFamily="@font/kurale"/>
    <ImageView
        android:layout_width="274dp"
        android:layout_height="189dp"
        android:id="@+id/seasonimage"
        android:layout_gravity="center"
        android:src="@drawable/sunnycloud"
        />

    <TextView
        android:id="@+id/degree"
        android:layout_width="109dp"
        android:layout_height="57dp"
        android:text="00Â°C"
        android:fontFamily="@font/lilita_one"
        android:textSize="45sp"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:orientation="horizontal"
            >
            <LinearLayout
            android:layout_width="155dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="17dp"
            android:background="@drawable/searchbg">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/lat_id"
                android:text="lat"
                android:fontFamily="@font/kurale"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:id="@+id/lat_num_id"
                android:text="00:00"
                android:fontFamily="@font/kurale"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textStyle="bold"
                />
        </LinearLayout>
            <LinearLayout
                android:layout_width="155dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="17dp"
                android:background="@drawable/searchbg">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:id="@+id/long_id"
                    android:text="long"
                    android:fontFamily="@font/kurale"
                    android:textSize="30sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:id="@+id/long_num_id"
                    android:text="00:00"
                    android:fontFamily="@font/kurale"
                    android:textSize="30sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    />
            </LinearLayout>


        </LinearLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="158dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="17dp"
            android:rowCount="3"
            android:columnCount="2"
            android:alignmentMode="alignMargins"
            android:background="@drawable/searchbg">

                <TextView
                    android:layout_height="38dp"
                    android:layout_width="125dp"
                    android:id="@+id/humidity_id"
                    android:text="Humudity"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/kurale"
                    android:textStyle="bold"
                    android:textSize="26dp"
                    />

            <TextView
                android:layout_height="38dp"
                android:layout_width="130dp"
                android:id="@+id/humidity_no_id"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp"
                android:text="00%"
                android:fontFamily="@font/kurale"
                android:textStyle="bold"
                android:textSize="26dp"
                android:textAlignment="textEnd"
                />
            <TextView
                android:layout_height="38dp"
                android:layout_width="125dp"
                android:id="@+id/pressure_id"
                android:text="Pressure"
                android:layout_marginStart="17dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/kurale"
                android:textStyle="bold"
                android:textSize="26dp"
                />

            <TextView
                android:layout_height="38dp"
                android:layout_width="170dp"
                android:id="@+id/pressure_no_id"
                android:layout_marginTop="10dp"
                android:text="0000mbar"
                android:fontFamily="@font/kurale"
                android:textStyle="bold"
                android:textSize="26dp"
                android:textAlignment="textEnd"
                />
            <TextView
                android:layout_height="38dp"
                android:layout_width="180dp"
                android:id="@+id/chanctorain_id"
                android:text="Chanc to rain"
                android:layout_marginStart="17dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/kurale"
                android:textStyle="bold"
                android:textSize="26dp"
                />

            <TextView
                android:layout_height="38dp"
                android:layout_width="130dp"
                android:id="@+id/chanctorain_no_id"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:text="00%"
                android:fontFamily="@font/kurale"
                android:textStyle="bold"
                android:textSize="26dp"
                android:textAlignment="textEnd"
                />
        </GridLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <LinearLayout
                android:layout_width="156dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="17dp"
                android:background="@drawable/searchbg">
                <LinearLayout
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:text="North"
                        android:fontFamily="@font/kurale"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:padding="5dp"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:text="00.0km/ph"
                        android:fontFamily="@font/kurale"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:text="North"
                        android:fontFamily="@font/kurale"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:padding="5dp"
                        android:textAlignment="viewEnd"
                        />
                </LinearLayout>



            <LinearLayout
                android:layout_width="155dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="66dp"
                android:layout_marginEnd="17dp"
                android:background="@drawable/searchbg">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    >
                <TextView
                    android:layout_width="65dp"
                    android:layout_height="30dp"
                    android:id="@+id/sunrise_id"
                    android:text="Sunrise"
                    android:fontFamily="@font/kurale"
                    android:layout_marginStart="5dp"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="40dp"
                        android:id="@+id/sunrise_time"
                        android:text="06:03"
                        android:fontFamily="@font/kurale"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textAlignment="center"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                <TextView
                    android:layout_width="65dp"
                    android:layout_height="30dp"
                    android:id="@+id/sunset_id"
                    android:text="Sunset"
                    android:fontFamily="@font/kurale"
                    android:layout_marginStart="5dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />
                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="40dp"
                        android:id="@+id/sunset_time_id"
                        android:text="00:00"
                        android:fontFamily="@font/kurale"
                        android:layout_marginStart="5dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        />
                </LinearLayout>
             </LinearLayout>
            </LinearLayout>
        </LinearLayout>

</LinearLayout>
</ScrollView>
